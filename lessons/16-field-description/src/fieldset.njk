---
title: Fieldset Demo
---

<fieldset>
  <legend>Your Name</legend>
  <div class="form-row">
    <div class="form-group">
      <label for="first-name">First Name</label>
      <input class="form-field" id="first-name" name="first-name" type="text" />
    </div>
    <div class="form-group">
      <label for="last-name">Last Name</label>
      <input class="form-field" id="last-name" name="last-name" type="text" />
    </div>
  </div>
</fieldset>

<fieldset>
  <legend>Address</legend>
  <div class="form-row">
    <div class="form-group">
      <label for="street-address">Street Address</label>
      <input class="form-field" id="street-address" name="street-address" type="text" />
    </div>
  </div>
  <div class="form-row form-row--mixed">
    <div class="form-group">
      <label for="city">City</label>
      <input class="form-field" id="city" name="city" type="text" />
    </div>
    <div class="form-group">
      <label for="state">State</label>
      <input class="form-field" id="state" name="state" type="text" />
    </div>
    <div class="form-group form-group--width-auto" style="--field-width: 8ch;">
      <label for="zip">Zip</label>
      <input class="form-field" id="zip" name="zip" type="text" />
    </div>
  </div>
</fieldset>

<fieldset>
  <legend>Do you own or rent?</legend>
  <div class="form-row form-row--variable">
    <div class="form-group">
      <label class="form-control radio">
        <span class="form-control__input radio__input">
          <input type="radio" value="own" name="property-ownership" />
          <span class="input__control"> </span>
        </span>
        <span class="radio__label">Own</span>
      </label>
    </div>
    <div class="form-group">
      <label class="form-control radio">
        <span class="form-control__input radio__input">
          <input type="radio" value="rent" name="property-ownership" />
          <span class="input__control"> </span>
        </span>
        <span class="radio__label">Rent</span>
      </label>
    </div>
  </div>
</fieldset>